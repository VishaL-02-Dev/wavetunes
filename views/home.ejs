<%- include("partials/user/header") %>

    <div id="bannerCarousel" class="relative w-full overflow-hidden">
        <div class="carousel-inner flex transition-transform duration-500 ease-in-out">
            <div class="carousel-item w-full h-full flex-shrink-0">
                <img src="/images/Banners/Banner1.webp" class="block w-full h-[700px] object-contain"
                    alt="Latest Release 1">
            </div>
            <div class="carousel-item w-full h-full flex-shrink-0">
                <img src="/images/Banners/Banner2.webp" class="block w-full h-[700px] object-contain"
                    alt="Latest Release 2">
            </div>
            <div class="carousel-item w-full h-full flex-shrink-0">
                <img src="/images/Banners/Banner3.webp" class="block w-full h-[700px] object-contain"
                    alt="Latest Release 3">
            </div>
        </div>

        <button
            class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full"
            id="prevSlide">&#10094;</button>
        <button
            class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-black bg-opacity-50 text-white p-2 rounded-full"
            id="nextSlide">&#10095;</button>

        <!-- Adding slide indicators -->
        <div class="absolute bottom-4 left-0 right-0 flex justify-center">
            <div class="flex space-x-2">
                <button class="w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-100 transition"></button>
                <button class="w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-100 transition"></button>
                <button class="w-3 h-3 rounded-full bg-white bg-opacity-50 hover:bg-opacity-100 transition"></button>
            </div>
        </div>
    </div>

    <!-- Latest Releases Section -->
    <section class="py-12 bg-gray-50">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center mb-8">
                <h2 class="text-3xl font-bold">Latest Releases</h2>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
                <% if (products && products.length> 0) { %>
                    <% products.forEach(product=> { %>
                        <div
                            class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform duration-300 transform hover:scale-105 hover:shadow-xl">
                            <div class="relative">
                                <% if (product.images && product.images.length> 0) { %>
                                    <img src="<%= product.images[0].url %>" class="w-full h-48 object-contain"
                                        alt="<%= product.name %>">
                                    <% } else { %>
                                        <img src="/images/default.jpg" class="w-full h-48 object-contain"
                                            alt="No Image Available">
                                        <% } %>
                                            <!-- New Badge -->
                                            <div
                                                class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
                                                NEW
                                            </div>
                                            <!-- Offer Badge -->
                                            <% if (product.offerPercentage && product.offerPercentage> 0) { %>
                                                <div
                                                    class="absolute top-2 left-2 bg-green-500 text-white text-xs font-bold px-2 py-1 rounded">
                                                    <%= product.offerPercentage %>% OFF
                                                </div>
                                                <% } %>
                            </div>
                            <div class="p-4">
                                <h3 class="text-lg font-semibold mb-2">
                                    <%= product.name %>
                                </h3>
                                <div class="flex items-center mb-2">
                                    <div class="flex text-yellow-400">
                                        <% for(let i=1; i <=5; i++) { %>
                                            <% if (i <=Math.floor(product.ratings)) { %>
                                                <svg class="w-4 h-4 fill-current" viewBox="0 0 24 24">
                                                    <path
                                                        d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
                                                </svg>
                                                <% } else { %>
                                                    <svg class="w-4 h-4 fill-current text-gray-300" viewBox="0 0 24 24">
                                                        <path
                                                            d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
                                                    </svg>
                                                    <% } %>
                                                        <% } %>
                                    </div>
                                    <span class="text-gray-500 text-sm ml-1">(<%= product.numOfReviews %>)</span>
                                </div>
                                <div class="flex justify-between items-center">
                                    <div class="flex items-center gap-2">
                                        <% if (product.offerPrice) { %>
                                            <span class="text-gray-900 font-bold">₹<%= product.offerPrice %></span>
                                            <span class="text-gray-500 line-through">₹<%= product.price %></span>
                                            <% } else { %>
                                                <span class="text-gray-900 font-bold">₹<%= product.price %></span>
                                                <% } %>
                                    </div>
                                    <a href="/user/product/<%= product._id %>"
                                        class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm transition">View
                                        Details</a>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <!-- Placeholder for when no products available -->
                                <% for(let i=0; i < 4; i++) { %>
                                    <div
                                        class="bg-white shadow-lg rounded-lg overflow-hidden transition-transform duration-300 transform hover:scale-105 hover:shadow-xl">
                                        <div class="relative">
                                            <img src="/images/defaults.jpg" class="w-full h-48 object-contain"
                                                alt="Coming Soon">
                                            <div
                                                class="absolute top-2 right-2 bg-red-500 text-white text-xs font-bold px-2 py-1 rounded">
                                                NEW
                                            </div>
                                        </div>
                                        <div class="p-4">
                                            <h3 class="text-lg font-semibold mb-2">Coming Soon</h3>
                                            <div class="flex items-center mb-2">
                                                <div class="flex text-yellow-400">
                                                    <% for(let j=0; j < 5; j++) { %>
                                                        <svg class="w-4 h-4 fill-current text-gray-300"
                                                            viewBox="0 0 24 24">
                                                            <path
                                                                d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z" />
                                                        </svg>
                                                        <% } %>
                                                </div>
                                                <span class="text-gray-500 text-sm ml-1">(0)</span>
                                            </div>
                                            <div class="flex justify-between items-center">
                                                <span class="text-gray-900 font-bold">₹TBD</span>
                                                <button
                                                    class="bg-gray-400 cursor-not-allowed text-white px-3 py-1 rounded text-sm">Coming
                                                    Soon</button>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>
            </div>
        </div>
    </section>

    <!-- Featured Categories Section -->
    <section class="py-12">
        <div class="container mx-auto px-4">
            <h2 class="text-3xl font-bold mb-8 text-center">Shop by Category</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <!-- Category 1: Headphones -->
                <a href="/user/products/over-ear_headsets" class="group">
                    <div
                        class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:shadow-xl hover:-translate-y-1">
                        <img src="/images/Categories/headphones.webp" alt="Headphones"
                            class="w-full h-64 object-contain group-hover:scale-105 transition-transform duration-500">
                        <div class="p-4 text-center">
                            <h3 class="text-xl font-bold mb-2">Headphones</h3>
                            <p class="text-gray-600 mb-3">Premium sound quality for audiophiles</p>
                            <button
                                class="text-blue-600 hover:text-blue-800 font-medium group-hover:underline transition">Browse
                                Collection</button>
                        </div>
                    </div>
                </a>

                <!-- Category 2: Earbuds -->
                <a href="/user/products/tws" class="group">
                    <div
                        class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:shadow-xl hover:-translate-y-1">
                        <img src="/images/Categories/earbuds.webp" alt="Earbuds"
                            class="w-full h-64 object-contain group-hover:scale-105 transition-transform duration-500">
                        <div class="p-4 text-center">
                            <h3 class="text-xl font-bold mb-2">TWS/Earbuds</h3>
                            <p class="text-gray-600 mb-3">Wireless freedom with crystal clear audio</p>
                            <button
                                class="text-blue-600 hover:text-blue-800 font-medium group-hover:underline transition">Browse
                                Collection</button>
                        </div>
                    </div>
                </a>

                <!-- Category 3: Neckbands -->
                <a href="/user/products/neckbands" class="group">
                    <div
                        class="bg-white rounded-lg shadow-md overflow-hidden transition-transform duration-300 hover:shadow-xl hover:-translate-y-1">
                        <img src="/images/Categories/neckbands.webp" alt="Neckbands"
                            class="w-full h-64 object-contain group-hover:scale-105 transition-transform duration-500">
                        <div class="p-4 text-center">
                            <h3 class="text-xl font-bold mb-2">Neckbands</h3>
                            <p class="text-gray-600 mb-3">Enhance your audio experience</p>
                            <button
                                class="text-blue-600 hover:text-blue-800 font-medium group-hover:underline transition">Browse
                                Collection</button>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>


    <!-- Newsletter Section -->
    <section class="py-16 bg-blue-600 text-white">
        <div class="container mx-auto px-4 text-center">
            <h2 class="text-3xl font-bold mb-4">Stay Updated</h2>
            <p class="mb-6 max-w-lg mx-auto">Subscribe to our newsletter for exclusive deals, new product announcements,
                and audio tips.</p>
            <form class="flex flex-col sm:flex-row max-w-md mx-auto gap-2">
                <input type="email" placeholder="Your email address" class="flex-grow px-4 py-2 rounded-lg text-black">
                <button type="submit"
                    class="bg-white text-blue-600 font-bold px-6 py-2 rounded-lg hover:bg-gray-100 transition">Subscribe</button>
            </form>
        </div>
    </section>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const carouselInner = document.querySelector('.carousel-inner');
            const items = document.querySelectorAll('.carousel-item');
            const indicators = document.querySelectorAll('.absolute.bottom-4 button');
            const currentSlideIndicator = document.getElementById('current-slide');
            let index = 0;
            let interval;

            // Check if images are loaded
            items.forEach((item, i) => {
                const img = item.querySelector('img');
                img.addEventListener('load', () => console.log(`Image ${i + 1} loaded successfully`));
                img.addEventListener('error', () => console.log(`Image ${i + 1} failed to load`));
            });

            function updateCarousel() {
                const offset = -index * 100;
                carouselInner.style.transform = `translateX(${offset}%)`;
                if (currentSlideIndicator) {
                    currentSlideIndicator.textContent = index + 1;
                }

                // Update indicators
                indicators.forEach((indicator, i) => {
                    if (i === index) {
                        indicator.classList.add('bg-opacity-100');
                        indicator.classList.remove('bg-opacity-50');
                    } else {
                        indicator.classList.add('bg-opacity-50');
                        indicator.classList.remove('bg-opacity-100');
                    }
                });
            }

            document.getElementById('prevSlide').addEventListener('click', () => {
                index = (index - 1 + items.length) % items.length;
                updateCarousel();
            });

            document.getElementById('nextSlide').addEventListener('click', () => {
                index = (index + 1) % items.length;
                updateCarousel();
            });

            // Add click events to indicators
            indicators.forEach((indicator, i) => {
                indicator.addEventListener('click', () => {
                    index = i;
                    updateCarousel();
                });
            });

            // Auto-slide every 3 seconds
            function startAutoSlide() {
                interval = setInterval(() => {
                    index = (index + 1) % items.length;
                    updateCarousel();
                }, 3000);
            }

            // Stop auto-sliding when user interacts
            document.getElementById('bannerCarousel').addEventListener('mouseenter', () => {
                clearInterval(interval);
            });

            // Start auto-sliding again when user leaves
            document.getElementById('bannerCarousel').addEventListener('mouseleave', () => {
                startAutoSlide();
            });

            // Start auto-slide
            startAutoSlide();

            // Show the first image
            updateCarousel();
        });
    </script>

    <%- include("partials/user/footer") %>