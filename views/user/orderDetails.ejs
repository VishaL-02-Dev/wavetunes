<head>
    <title>Order Confirmation | WaveTunes</title>
    <%- include('./partials/user/header') %>
    <style>
        .order-section {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .order-section:hover {
            transform: scale(1.01);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .status-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 9999px;
            font-weight: 500;
        }
        
        .status-pending {
            background-color: #F59E0B;
            color: white;
        }
        
        .status-processing {
            background-color: #3B82F6;
            color: white;
        }
        
        .status-shipped {
            background-color: #8B5CF6;
            color: white;
        }
        
        .status-delivered {
            background-color: #10B981;
            color: white;
        }
        
        .status-cancelled {
            background-color: #EF4444;
            color: white;
        }
        
        .timeline-item {
            position: relative;
            padding-left: 2.5rem;
            padding-bottom: 2rem;
        }
        
        .timeline-item:before {
            content: '';
            position: absolute;
            left: 0.5rem;
            top: 0;
            bottom: 0;
            width: 2px;
            background-color: #E5E7EB;
        }
        
        .timeline-item:last-child:before {
            bottom: 50%;
        }
        
        .timeline-dot {
            position: absolute;
            left: 0;
            top: 0;
            width: 1rem;
            height: 1rem;
            border-radius: 50%;
            background-color: #3B82F6;
        }
        
        @media print {
            .no-print {
                display: none;
            }
            
            .container {
                width: 100%;
                max-width: 100%;
            }
        }
    </style>
</head>

<body>
    <div class="container mx-auto px-4 py-8">
        <nav class="mb-8 no-print" aria-label="Breadcrumb">
            <ol class="flex text-sm">
                <li><a href="/" class="text-white hover:text-blue-700">Home</a></li>
                <li class="mx-2 text-white">/</li>
                <li><a href="/user/myOrders" class="text-white hover:text-blue-700">My Orders</a></li>
                <li class="mx-2 text-white">/</li>
                <li class="text-white font-medium">Order Details</li>
            </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Left Column - Order Information -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Order Summary -->
                <div class="bg-white rounded-lg shadow-md p-6 order-section">
                    <div class="flex justify-between items-center mb-4">
                        <h2 class="text-2xl font-semibold text-gray-800">Order Summary</h2>
                        <span class="status-badge status-<%= order.status.toLowerCase() %>">
                            <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                        </span>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                        <div>
                            <p class="text-sm text-gray-600">Order Number</p>
                            <p class="font-medium"><%= order.orderId %></p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Order Date</p>
                            <p class="font-medium"><%= new Date(order.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Payment Method</p>
                            <p class="font-medium"><%= order.paymentMethod %></p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Total Amount</p>
                            <p class="font-medium">₹<%= order.totalAmount.toFixed(2) %></p>
                        </div>
                    </div>
                    <div class="border-t border-gray-200 pt-4">
                        <h3 class="font-semibold text-gray-800 mb-3">Shipping Address</h3>
                        <p><%= address.addressType %> Address</p>
                        <p><%= address.address %></p>
                        <p><%= address.city %>, <%= address.district %>, <%= address.state %> - <%= address.pinCode %></p>
                        <p>Phone: <%= address.phone %></p>
                    </div>
                </div>

                <!-- Order Items -->
                <div class="bg-white rounded-lg shadow-md p-6 order-section">
                    <h2 class="text-2xl font-semibold mb-6 text-gray-800">Order Items</h2>
                    <div class="space-y-4">
                        <% order.items.forEach(function(item) { %>
                            <div class="flex items-center border-b border-gray-200 pb-4 mb-4">
                                <div class="h-20 w-20 flex-shrink-0 overflow-hidden rounded-md border border-gray-200 mr-4">
                                    <img src="<%= item.productId && item.productId.images && item.productId.images.length > 0 ? item.productId.images[0].url : '/images/product-placeholder.jpg' %>" alt="<%= item.productId ? item.productId.name : 'Product' %>">
                                </div>
                                <div class="flex-grow">
                                    <h3 class="text-lg font-medium text-gray-900"><%= item.productId ? item.productId.name : 'Unknown Product' %></h3>
                                    <p class="text-gray-600">Qty: <%= item.quantity %></p>
                                    <p class="text-gray-600">Status: <span class="status-badge status-<%= item.status.toLowerCase() %>"><%= item.status.charAt(0).toUpperCase() + item.status.slice(1) %></span></p>
                                </div>
                                <div class="text-right">
                                    <p class="text-lg font-medium text-gray-900">₹<%= item.productId.price ? (item.productId.price * (item.quantity || 1)).toFixed(2) : '0.00' %></p>
                                    <% if (item.status === 'pending' && order.status === 'pending') { %>
                                        <button class="text-red-600 hover:text-red-800 mt-2" onclick="cancelItem('<%= order._id %>', '<%= item._id %>')">Cancel Item</button>
                                    <% } %>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <!-- Right Column - Actions -->
            <div>
                <div class="bg-white rounded-lg shadow-md p-6 sticky top-6 order-section">
                    <h2 class="text-2xl font-semibold mb-6 text-gray-800">Order Actions</h2>
                    <div class="space-y-4">
                        <% if (canCancel) { %>
                            <button onclick="cancelOrder('<%= order._id %>')" class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 rounded-md transition no-print">
                                Cancel Order
                            </button>
                        <% } %>
                        <a href="/user/myOrders" class="block w-full bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-3 rounded-md transition text-center no-print">
                            View All Orders
                        </a>
                        <a href="/" class="block w-full bg-green-600 hover:bg-green-700 text-white font-medium py-3 rounded-md transition text-center no-print">
                            Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Cancel entire order
        function cancelOrder(orderId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to cancel this order?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/user/orders/${orderId}/cancel`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Cancelled!',
                                text: 'Order cancelled successfully.',
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error',
                                text: data.message || 'Failed to cancel order',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Error',
                            text: 'Something went wrong',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    });
                }
            });
        }
    
        // Cancel specific item
        function cancelItem(orderId, itemId) {
            Swal.fire({
                title: 'Are you sure?',
                text: 'Do you want to cancel this item?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/user/orders/${orderId}/items/${itemId}/cancel`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            Swal.fire({
                                title: 'Cancelled!',
                                text: 'Item cancelled successfully.',
                                icon: 'success',
                                confirmButtonText: 'OK'
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire({
                                title: 'Error',
                                text: data.message || 'Failed to cancel item',
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        Swal.fire({
                            title: 'Error',
                            text: 'Something went wrong',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    });
                }
            });
        }
    </script>
    

    <%- include('./partials/user/footer') %>
</body>